{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@typings": [
        "src/typings/index"
      ],
      "@theme/*": [
        "src/theme/*"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@stories/*": [
        "stories/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@icons": [
        "src/icons/index"
      ],
      "@helpers": [
        "src/helpers/index"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "stories",
    ".storybook",
    "node_modules",
    "tests"
  ]
}
